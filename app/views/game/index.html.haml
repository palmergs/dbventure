= turbo_frame_tag "display-stage" do
  .field
    .label Name:
    %h2= @stage.name
  .field
    .label Description:
    = @stage.description
  .field
    .label Actors
    = turbo_frame_tag dom_id(@stage, "actors"), src: stage_actors_path(@stage)
  .field
    .label Props
    = turbo_frame_tag dom_id(@stage, "props"), src: stage_props_path(@stage)
  .field
    .label Passages
    = turbo_frame_tag dom_id(@stage, "passages"), src: stage_passages_path(@stage)

