= form_for @character do |f|
  - if @character.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character.errors.count, "error")} prohibited this character from being saved:"
      %ul
        - @character.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :creature, class: 'label'
    = f.collection_select :creature_id, Creature.all, :id, :name, { prompt: true }, class: 'input'
  .field
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'input'
  .field
    = f.label :description, class: 'label'
    = f.text_area :description, class: 'input'
  .actions
    = f.submit 'Save', class: 'btn action-confirm'
