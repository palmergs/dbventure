.grow-1
  %h1 Listing actors

  %table
    %thead
      %tr
        %th Stage
        %th Creature
        %th Name
        %th

    %tbody
      - @actors.each do |actor|
        %tr
          %td= link_to actor.stage.name, actor.stage, class: 'link'
          %td= link_to actor.creature.name, actor.creature, class: 'link'
          %td= actor.name
          %td
            = link_to 'Show', actor, class: 'btn action-show'
            = link_to 'Edit', edit_actor_path(actor), class: 'btn action-edit'
            = link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn action-delete'

  = link_to 'New Actor', new_actor_path, class: 'btn action-new'
