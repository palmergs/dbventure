.grow-1
  %h1 Listing items

  %table
    %thead
      %tr
        %th Name
        %th Description
        %th

    %tbody
      - @items.each do |item|
        %tr
          %td= item.name
          %td= item.description
          %td
            = link_to 'Show', item, class: 'btn action-show'
            = link_to 'Edit', edit_item_path(item), class: 'btn action-edit'
            = link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn action-delete'

  = link_to 'New Item', new_item_path, class: 'btn action-new'
