= form_for @creature do |f|
  - if @creature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@creature.errors.count, "error")} prohibited this creature from being saved:"
      %ul
        - @creature.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'input'
  .field
    = f.label :description, class: 'label'
    = f.text_field :description, class: 'input'
  .actions
    = f.submit 'Save', class: 'btn action-confirm'
