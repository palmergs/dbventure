= form_for [:manage, @actor] do |f|
  = render partial: 'manage/errors', locals: { model: @actor }
  .field
    = f.label :stage, class: 'label'
    = f.collection_select :stage_id, Stage.order(:name), :id, :name, { include_blank: true },  class: 'input'
  .field
    = f.label :creature, class: 'label'
    = f.collection_select :creature_id, Creature.order(:name), :id, :name, { include_blank: true }, class: 'input'
  .field
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'input'
  .actions
    = f.submit 'Save', class: 'btn action-confirm'
