.flex-1
  %h2 Listing Actors

  %table.w-full
    %thead
      %tr
        %th ID
        %th Stage
        %th Creature
        %th Name
        %th

    %tbody
      - @actors.each do |actor|
        %tr
          %td.w-12= actor.id
          %td= link_to actor.stage.name, manage_stage_path(actor.stage), class: 'link'
          %td= link_to actor.creature.name, manage_creature_path(actor.creature), class: 'link'
          %td= actor.name
          %td.actions
            = link_to manage_actor_path(actor), class: 'btn-round action-show' do
              = fa_icon('eye')
            = link_to edit_manage_actor_path(actor), class: 'btn-round action-edit' do
              = fa_icon("pencil")
            = link_to manage_actor_path(actor), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-round action-delete' do
              = fa_icon("trash")

  = link_to 'New Actor', new_manage_actor_path, class: 'btn action-new'
