= form_for @prop do |f|
  - if @prop.errors.any?
    #error_explanation
      %h2= "#{pluralize(@prop.errors.count, "error")} prohibited this prop from being saved:"
      %ul
        - @prop.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :item, class: 'label'
    = f.collection_select :item_id, Item.order(:name), :id, :name
  .field
    = f.label :actor, class: 'label'
    = f.collection_select :slotted_id, Actor.order(:name), :id, :name
    = f.hidden_field :slotted_type, value: 'Actor'
  .field
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'input'
  .field
    = f.label :slots, class: 'label'
    = f.text_field :slots
  .actions
    = f.submit 'Save', class: 'btn action-confirm'
