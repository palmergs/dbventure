= form_for [:manage, @creature] do |f|
  = render partial: 'manage/errors', locals: { model: @creature }
  .field
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'input'
  .field
    = f.label :description, class: 'label'
    = f.text_field :description, class: 'input'
  .actions
    = f.submit 'Save', class: 'btn action-confirm'
