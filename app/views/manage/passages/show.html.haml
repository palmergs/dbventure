.flex-1
  %p#notice= notice

  .field
    .label From:
    = link_to @passage.from.name, @passage.from, class: 'link'
  .field
    .label To:
    = link_to @passage.to.name, @passage.to, class: 'link'
  .field
    .label Name:
    = @passage.name
  .field
    .label Direction:
    = @passage.direction

  = link_to 'Edit', edit_passage_path(@passage), class: 'btn action-edit'
  = link_to 'Back', passages_path, class: 'btn action-cancel'
