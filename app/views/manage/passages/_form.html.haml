= form_for [:manage, @passage] do |f|
  = render partial: 'manage/errors', locals: { model: @passage }
  .field
    = f.label :from, class: 'label'
    = f.collection_select :from_id, Stage.order(:name), :id, :name, { include_blank: true }, class: 'input'
  .field
    = f.label :to, class: 'label'
    = f.collection_select :to_id, Stage.order(:name), :id, :name, { include_blank: true }, class: 'input'
  .field
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'input'
  .field
    = f.label :direction, class: 'label'
    = f.text_field :direction, class: 'input'
  .actions
    = f.submit 'Save', class: 'btn action-confirm'
