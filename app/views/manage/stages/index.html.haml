.flex-1
  %h2
    Listing stages

  %table.w-full
    %thead
      %tr
        %th ID
        %th Name
        %th Description
        %th.actions

    %tbody
      - @stages.each do |stage|
        %tr
          %td.w-12= stage.id
          %td= stage.name
          %td= stage.description
          %td.actions
            = link_to manage_stage_path(stage), class: 'btn-round action-show' do
              = fa_icon('eye')
            =link_to edit_manage_stage_path(stage), class: 'btn-round action-edit' do
              = fa_icon('pencil')
            =link_to manage_stage_path(stage),
               method: :delete,
               data: { turbo_method: :delete, confirm: 'Are you sure?' },
               class: 'btn-round action-delete' do
              = fa_icon('trash')


  = link_to 'New Stage', new_manage_stage_path, class: 'btn action-new'
