= form_for [:manage, @stage] do |f|
  = render partial: 'manage/errors', locals: { model: @stage }
  .field
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'input'
  .field
    = f.label :description, class: 'label'
    = f.text_area :description, rows: 8, class: 'input'
  .actions
    = f.submit 'Save', class: 'btn action-confirm'
