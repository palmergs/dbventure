.flex-9.w-96.mx-auto
  %h2
    Edit
    = resource_name.to_s.humanize
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email, class: 'label'
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for:
          = resource.unconfirmed_email
    .field
      = f.label :password, class: 'label' do
        Password
        - if @minimum_password_length
          %em
            = @minimum_password_length
            characters minimum
        %i (leave blank if you don't want to change it)
      = f.password_field :password, autocomplete: "new-password", class: 'input'
    .field
      = f.label :password_confirmation, class: 'label'
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'input'
    .field
      = f.label :current_password, class: 'label' do
        Current Password
        %i (we need your current password to confirm your changes)
      = f.password_field :current_password, autocomplete: "current-password", class: 'input'
    .field
      = f.submit "Update", class: 'btn action-confirm'
  %h3 Cancel my account
  %div
    Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete}
  = link_to "Back", :back, class: 'link'
